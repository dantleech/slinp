<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="slinp.imagine.binary.loader.phpcr.class">Slinp\Bridge\LiipImagineBundle\Binary\Loader\PhpcrLoader</parameter>
    </parameters>

    <services>

        <service id="slinp.imagine.binary.loader.phpcr" class="%slinp.imagine.binary.loader.phpcr.class%">
            <argument>/slinp/web/root</argument>
            <argument type="service" id="slinp.phpcr_session" />
            <tag name="liip_imagine.binary.loader" loader="slinp" />
        </service>

    </services>
</container>

