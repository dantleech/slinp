<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="slinp.session.class">Slinp\SlinpBundle\Phpcr\SlinpSession</parameter>
        <parameter key="slinp.phpcr.object_broker.class">Slinp\SlinpBundle\Phpcr\ObjectBroker</parameter>
        <parameter key="slinp.phpcr.object_broker_mappings" type="collection">
            <parameter key="nt:resource">Slinp\SlinpBundle\SlinpObject\Resource</parameter>
        </parameter>
    </parameters>

    <services>

        <service id="slinp.phpcr.phpcr_session" factory-service="doctrine_phpcr" factory-method="getConnection" class="PHPCR\SessionInterface"/>

        <service id="slinp.phpcr.object_broker" class="%slinp.phpcr.object_broker.class%"/>

        <service id="slinp.session" class="%slinp.session.class%">
            <argument type="service" id="slinp.phpcr.phpcr_session"/>
            <argument type="service" id="slinp.phpcr.object_broker"/>
            <tag name="router"/>
        </service>

    </services>
</container>

